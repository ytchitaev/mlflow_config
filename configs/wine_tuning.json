{
  "setup": {
    "experiment_name": "Wine sklearn regression - tuning",
    "tags": {
      "environment": "production",
      "team": "data-science",
      "model_version": "1.0"
    }
  },
  "data": {
    "data_source": "sklearn",
    "dataset_name": "wine",
    "input_columns": [
      "alcohol",
      "malic_acid",
      "ash",
      "alcalinity_of_ash",
      "magnesium",
      "total_phenols",
      "flavanoids",
      "nonflavanoid_phenols",
      "proanthocyanins",
      "color_intensity",
      "hue",
      "od280/od315_of_diluted_wines",
      "proline"
    ],
    "output_columns": [
      "cultivar"
    ]
  },
  "split": {
    "train_percentage": 80,
    "validation_percentage": 10,
    "test_percentage": 10,
    "random_state": 42
  },
  "model": {
    "library_name": "lightgbm",
    "model_name": "LGBMRegressor",
    "params": {},
    "callbacks": {
      "log_evaluation": {
        "period": 100,
        "show_stdv": true
      }
    }
  },
  "tuning": {
    "name": "grid_search",
    "params": {
      "param_grid": {
        "boosting_type": [
          "gbdt"
        ],
        "num_leaves": [
          20,
          30,
          40
        ],
        "learning_rate": [
          0.01,
          0.05,
          0.1
        ],
        "feature_fraction": [
          0.5,
          0.7,
          0.9,
          1.0
        ],
        "bagging_fraction": [
          0.5,
          0.7,
          0.9
        ]
      },
      "cv": 5,
      "scoring": "neg_mean_squared_error",
      "n_jobs": -1,
      "refit": true,
      "return_train_score": true,
      "verbose": false
    }
  },
  "evaluate": {
    "rmse": {}
  }
}