{
  "setup": {
    "experiment_name": "Iris sklearn categorisation",
    "data_source": "sklearn",
    "dataset_name": "iris",
    "library_name": "lightgbm",
    "model_name": "LGBMClassifier",
    "verbose_fit_flag": "1",
    "input_columns": [
      "sepal length (cm)",
      "sepal width (cm)",
      "petal length (cm)",
      "petal width (cm)"
    ],
    "output_columns": [
      "class"
    ],
    "paths": {
      "run_temp_folder": "temp"
    },
    "artefacts": {
      "cv_results": {
        "file_name": "cv_results.csv"
      },
      "python_logging": {
        "file_name": "python_logging.txt"
      }
    },
    "split": {
      "train_percentage": 80,
      "validation_percentage": 10,
      "test_percentage": 10
    }
  },
  "grid_search": {
    "param_grid": {
      "boosting_type": [
        "gbdt",
        "dart"
      ],
      "num_leaves": [
        15,
        31,
        150
      ],
      "learning_rate": [
        0.01,
        0.05,
        0.5
      ],
      "n_estimators": [
        50,
        100,
        300
      ]
    },
    "cv": 3
  }
}