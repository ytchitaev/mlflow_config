{
  "setup": {
    "experiment_name": "Iris sklearn categorisation - tuning"
  },
  "data": {
    "data_source": "sklearn",
    "dataset_name": "iris",
    "input_columns": [
      "sepal length (cm)",
      "sepal width (cm)",
      "petal length (cm)",
      "petal width (cm)"
    ],
    "output_columns": [
      "class"
    ]
  },
  "split": {
    "train_percentage": 80,
    "validation_percentage": 10,
    "test_percentage": 10,
    "random_state": 42
  },
  "model": {
    "library_name": "lightgbm",
    "model_name": "LGBMClassifier",
    "params": {},
    "callbacks": {}
  },
  "tuning": {
    "name": "grid_search",
    "params": {
      "param_grid": {
        "boosting_type": [
          "gbdt",
          "dart"
        ],
        "num_leaves": [
          15,
          31,
          150
        ],
        "learning_rate": [
          0.01,
          0.05,
          0.5
        ],
        "n_estimators": [
          50,
          100,
          300
        ]
      },
      "cv": 5,
      "scoring": "accuracy",
      "n_jobs": -1,
      "refit": true,
      "return_train_score": true,
      "verbose": false
    }
  },
  "evaluate": {
    "accuracy": {},
    "precision": {
      "additional": {
        "average": "macro"
      }
    },
    "recall": {
      "additional": {
        "average": "macro"
      }
    },
    "f1": {
      "additional": {
        "average": "macro"
      }
    },
    "rmse": {}
  },
  "artifacts": {
    "cv_results": {
      "file_name": "cv_results.csv"
    },
    "best_estimator_evals_result": {
      "file_name": "best_estimator_evals_result.json"
    }
  }
}